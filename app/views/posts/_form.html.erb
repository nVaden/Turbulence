<div class="form_post">

    <div id="twitchPlayer"></div>

  <form id="searchForm">
    <input type="text" id="search" placeholder="Enter the name of the player you want to stream"/>
    <input type="submit" value="Search"/>
  </form>

  <%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

    <ul>
      <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

   <!-- ================================================ -->
  <%= f.label :title %>
  <%= f.text_field :subject %>
  <%=  f.hidden_field :channel %>
  <%= f.button :submit %>

  <% end %>



  <!-- TWITCH API USAGE  -->
  <!-- ============================================ -->
  <script src= "http://player.twitch.tv/js/embed/v1.js"></script>
  <script type="text/javascript">
    var options = {
      width: 854,
      height: 480,
      channel: "imaqtpie"       
    };
    var player = new Twitch.Player("twitchPlayer", options);
    player.setVolume(0.5);
    $(document).ready(function(){

      console.log("Doc loaded, how bout that?!")
      console.log($("#searchForm") )
       $("#searchForm").submit(function(event){
        console.log("submitted search!")
        event.preventDefault();
        var selection = $("#search").val();
        console.log(selection);
        player.setChannel(selection);
      });
    });


  </script>


</div>